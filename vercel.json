{
    "version": 2,
    "builds": [
        {
            "src": "heimeyra-frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "buildCommand": "cd heimeyra-frontend && npm install && npm run build",
                "outputDirectory": "build"
            }
        },
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}