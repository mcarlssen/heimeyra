{
    "version": 1,
    "builds": [
      {
        "src": "heimeyra-frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "heimeyra-frontend/build" }
      },
      {
        "src": "api/**/*.ts",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/api/(.*)", "dest": "/api/$1" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }