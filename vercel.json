{
    "version": 2,
    "builds": [
        {
            "src": "heimeyra-frontend/package.json",
            "use": "@vercel/static-build"
        },
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/",
            "dest": "/heimeyra-frontend/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/heimeyra-frontend/$1"
        }
    ]
}