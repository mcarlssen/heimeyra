{
    "version": 2,
    "builds": [
        {
            "src": "heimeyra-frontend/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "heimeyra-frontend/build" }
        },
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(.*)",
            "dest": "heimeyra-frontend/build/$1"
        }
    ]
}