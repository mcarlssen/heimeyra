{
    "version": 2,
    "builds": [
        {
            "src": "heimeyra-frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "buildCommand": "cd heimeyra-frontend && npm install && npm run build",
                "outputDirectory": "heimeyra-frontend/build"
            }
        },
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/static/(.*)",
            "dest": "/heimeyra-frontend/build/static/$1"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/heimeyra-frontend/build/assets/$1"
        },
        {
            "src": "/(.+\\.[a-zA-Z]+)$",
            "dest": "/heimeyra-frontend/build/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/heimeyra-frontend/build/index.html"
        }
    ]
}